{
  "permissions": {
    "allow": [
      "Bash(ruff:*)",
      "Bash(ty:*)",
      "Bash(pytest:*)",
      "Bash(pre-commit run -a:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git switch -c:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(rg:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "ruff format .",
            "statusMessage": "Formatting with ruff"
          },
          {
            "type": "command",
            "command": "ruff check . --fix",
            "statusMessage": "Running ruff checks"
          }
        ]
      }
    ]
  }
}
